@model IEnumerable<HR_System.Models.t_empleados>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mt-2"> Users </h2>

<p>
    @Html.ActionLink("Create New", "NewUser")
</p>
<table id="dtBasicExample" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>
                Name
            </th>

            <th>
                User
            </th>
            <th>
                Employee #
            </th>
            <th>
                Email
            </th>
            <th>
                Rol
            </th>
            <th></th>
        </tr>
    </thead>
   <tbody>
       @foreach (var item in Model)
       {
           <tr>
               <td>
                   @Html.DisplayFor(modelItem => item.nombre)
               </td>

               <td>
                   @Html.DisplayFor(modelItem => item.t_usuarios.usuario)
               </td>
               <td>
                   @Html.DisplayFor(modelItem => item.empleado)
               </td>
               <td>
                   @Html.DisplayFor(modelItem => item.t_usuarios.email)
               </td>
               <td>
                   @Html.DisplayFor(modelItem => item.t_usuarios.rol)
               </td>
               <td>
                   @Html.ActionLink("Edit", "Edit", new { empleado = item.empleado }) |
                   @Html.ActionLink("Details", "Details", new { empleado = item.empleado }) |
                   @Html.ActionLink("Delete", "Delete", new { empleado = item.empleado })
               </td>
           </tr>
       }
   </tbody>

</table>

@section scripts{
    <script>
        $(document).ready(function () {
            $('#dtBasicExample').DataTable();
            $('.dataTables_length').addClass('bs-select');
        });
    </script>
    }
