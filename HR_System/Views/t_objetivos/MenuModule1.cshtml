@model IEnumerable<HR_System.Models.t_objetivos>

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h6 class="font-weight-bold text-center grey-text text-uppercase small mb-2 mt-3" style="font-size:1.5vw">MODULE 1</h6>
<h3 class="font-weight-bold text-center  pb-2" style="font-size:3.5vw">Performance Review</h3>

<div class="row">
    <div class="col-4">
        <a data-toggle="collapse" href="#CollapseObjectives" aria-expanded="false" aria-controls="CollapseObjectives">
            <div class="card">
                My Objectives
            </div>
        </a>

        <div class="collapse" id="CollapseObjectives">
            @if (ViewBag.NewObjective == "1")
            {
                <a href='@Url.Action("CreateHeader","t_objetivos",new {empleado = ViewBag.empleado, axo = ViewBag.NewYear})' class="hoverable">
                    <div style="font-size:1vw">
                        @ViewBag.NewYear <span class="badge-danger">New</span>
                    </div>
                </a>
            }

            @foreach (var item in Model)
            {
                <a href='@Url.Action("Create","t_objetidet",new {empleado = item.empleado, axo = item.axo})' class="hoverable">
                    <div style="font-size:1vw">
                        @item.axo
                    </div>
                </a>
            }
          </div>

        </div>
    @if (ViewBag.DReports == "1")
    {
        <div class="col-4">
            <a href='@Url.Action("DirectReports","t_objetivos", null)'>
                <div class="card">
                    Direct Reports
                </div>
            </a>
        </div>
    }
    

</div>


<div>
    @Html.ActionLink("Back to Home", "Index", "Home", null,null)
</div>

