
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .selectButton{
        left:47%; 
        top:98%; 
        transform: translate(-50%, -50%);
        z-index: 2;
        transition: all ease 0.35s;
        width: 7vw;
        height: 3vw;
        overflow:hidden;
    }

</style>

<div class="row rounded" style="background-color:#f2f2f2">
    <div class="col-2 mt-4 mb-4 avatar d-flex justify-content-center align-items-center ">
       @if (ViewBag.userImage != null)
       {
        <img alt="" src="@ViewBag.userImage" style="height:10vw" class="img-fluid rounded-circle z-depth-1" id="imgMedline" />
       }
       else
       {
        <img src="~/Images/medline-logo.png" style="height:10vw" class="img-fluid rounded-circle z-depth-1" id="logoMedline" />
       }
    </div>
    <div class="col-8 mt-4 mb-4 my-auto">
        <h1 class="font-weight-bold" style="font-size: 4.5vw">Welcome @ViewBag.userFirstName</h1>
        <p class="text-muted" style="font-size: 2vw">
            @ViewBag.userJobPosition
        </p>
    </div>
    <div class="col-2 mt-3 mb-4 avatar d-flex justify-content-center align-items-center ">
        <img src="~/Images/HR_system_LOGO.png"  style="height:10vw" class="img-fluid rounded-circle z-depth-1" />
    </div>

</div>
<div class="row m-3">
    <div class="col-12 text-center">
        <h1>
            Select a module
        </h1>
    </div>
</div>


<div class="row">
    
    <div class="col-1 p-0">

    </div>
    <div class="col-md-2 p-2">
        <div class="card">
            <div class="card-body">
                        <div class="row">                            
                            <div class="col-12 text-center">
                                <i class="fas fa-check-double fa-3x primary-ic"></i>

                                <p class="font-weight-bold my-3" style="font-size:1.2vw">Performance Review</p>

                                <p class="text-muted" style="font-size:1vw"></p>
                            </div>
                        </div>
                <a  href='@Url.Action("MenuModule1","t_objetivos", null)' class="btn btn-primary p-0 position-absolute rounded-pill d-flex justify-content-center selectButton align-items-md-center" type="button">
                    <span class="infoText" style="font-size:1vw">Enter</span>
                </a>
            </div>
        </div>
        
    </div>
    <div class="col-md-2 p-2">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-12 text-center">
                        <i class="fas fa-clipboard-list fa-3x primary-ic"></i>

                        <p class="font-weight-bold my-3" style="font-size:1.2vw">Talent Performance Planning</p>

                        <p class="text-muted" style="font-size:1vw"></p>
                    </div>
                </div>
               
                <button class="btn btn-primary p-0 position-absolute rounded-pill d-flex justify-content-center selectButton" type="button" data-toggle="collapse" data-target=".multi-collapse2"
                        aria-expanded="false" aria-controls="686m2 110m2 m2 xm2">
                    <span class="infoText" style="font-size:1vw">Enter</span>
                </button>
            </div>
        </div>

       


 
    </div>
    <div class="col-md-2 p-2">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-12 text-center">
                        <i class="fas fa-hand-holding-usd fa-3x primary-ic"></i>

                        <p class="font-weight-bold my-3" style="font-size:1.2vw">Compensation Offer</p>

                        <p class="text-muted" style="font-size:1vw"></p>
                    </div>
                </div>
                <button class="btn btn-primary p-0 position-absolute rounded-pill d-flex justify-content-center selectButton" type="button" >
                    <span class="infoText" style="font-size:1vw">Enter</span>
                </button>
            </div>
        </div>
        
    </div>
    <div class="col-md-2 p-2">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-12 text-center">
                        <i class="fas fa-money-check-alt fa-3x primary-ic"></i>

                        <p class="font-weight-bold my-3" style="font-size:1.2vw">Annual Merit Salary Planning</p>

                        <p class="text-muted" style="font-size:1vw"></p>
                    </div>
                </div>
                <a href='@Url.Action("IndexModule4","t_merit", null)' class="btn btn-primary p-0 position-absolute rounded-pill d-flex justify-content-center selectButton align-items-md-center" type="button">
                    <span class="infoText" style="font-size:1vw">Enter</span>
                </a>

            </div>
        </div>
       

    </div>
    <div class="col-md-2 p-2">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-12 text-center">
                        <i class="fas fa-square-root-alt fa-3x primary-ic"></i>

                        <p class="font-weight-bold my-3" style="font-size:1.2vw">Formula Bonus</p>

                        <p class="text-muted" style="font-size:1vw"></p>
                    </div>
                </div>
                <button class="btn btn-primary p-0 position-absolute rounded-pill d-flex justify-content-center selectButton" type="button">
                    <span class="infoText" style="font-size:1vw">Enter</span>
                </button>
            </div>
        </div>
        
    </div>
    <div class="col-1 p-0">

    </div>
</div>


