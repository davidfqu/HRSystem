
@{
    ViewBag.Title = "DirectReports";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h6 class="font-weight-bold text-center grey-text text-uppercase small mb-2 mt-3" style="font-size:1.5vw">Annual Merit Salary Plannnig</h6>
<h3 class="font-weight-bold text-center  pb-2" style="font-size:3.5vw">Direct Reports</h3>

<table class="table">
    <tr>
        <th>

        </th>
        <th>
            Employee #
        </th>

        <th>
            Name
        </th>

        <th>
            Job Position
        </th>
        <th>
            Merit Status
        </th>
    </tr>

    @foreach (var item in ViewBag.Directos)
    {
        string estado = "";
        string estadoc = "";
        estadoc = item.estatusm4;
        switch (estadoc)
        {
            case "PE":
                estado = "Waiting For Aproval";
                break;

            case "AP":
                estado = "Approved";
                break;
                
            default:
                estado = "No Merit";
                break;
        }

        <tr class="my-auto">
            <td align="center">
                <img src="@Html.Raw("data:image/png;base64," + Convert.ToBase64String(item.foto))" class="img-fluid rounded-circle" style="height:4vw" />
            </td>

            <td>
                @item.empleado
            </td>

            <td>
                @item.nombre
            </td>

            <td>
                @item.puesto
            </td>

            <td>
                    <span>@estado</span> 
                    <a href="@Url.Action("MeritProcess", "t_meridet", new {empleado = item.empleado, axo = item.axom4})"><i class="fas fa-search"></i></a>
  
            </td>
        </tr>
    }

</table>


<div>
    @Html.ActionLink("Back", "IndexModule4", "t_merit", null, null)
</div>
